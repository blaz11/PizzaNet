<UserControl x:Class="Pizza.Net.Screens.Entities.SizeEntity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.Net.Screens.Entities"
             xmlns:designTime="clr-namespace:Pizza.Net.Screens.DesignTimeData"
             mc:Ignorable="d" 
             d:DesignHeight="25"
             d:DesignWidth="200"     
             d:DataContext="{d:DesignInstance designTime:SizeEntity,
                                              IsDesignTimeCreatable=True}">
    <Grid>
        <Grid VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <local:BasicEntityField Grid.Column="0" DataContext="{Binding Name}"/>
            <local:BasicEntityField Grid.Column="1" DataContext="{Binding RadiusInCm}"/>
            <local:BasicEntityField Grid.Column="2" DataContext="{Binding PriceMultiplier}"/>
        </Grid>
    </Grid>
</UserControl>
