<UserControl x:Class="Pizza.Net.Screens.Entities.BasicEntityField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.Net.Screens.Entities"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="100">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>
  <Grid MouseEnter="MouseEnteredMarqueeHitbox"
        MouseLeave="MouseLeftMarqueeHitbox"
        Height="{StaticResource EntityFieldHeight}">
    <!-- Rectangle for hitbox detection-->
    <Rectangle Fill="Transparent"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
    <Border BorderBrush="Black"
            BorderThickness="1">
      <Canvas x:Name="MarqueeCanvas"
              Grid.Column="0"
              ClipToBounds="True">
        <TextBlock x:Name="MarqueeBlock"
                   Text="{Binding}"
                   Style="{StaticResource EntityFieldTextBlockStyle}"
                   Margin="1,0,1,0"/>
      </Canvas>
    </Border>
  </Grid>
</UserControl>