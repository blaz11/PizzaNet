<UserControl x:Class="Pizza.Net.Screens.Tables.SizesTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.Net.Screens.Tables"
             xmlns:designTime="clr-namespace:Pizza.Net.Screens.DesignTimeData"
             mc:Ignorable="d" 
             d:DesignHeight="400"
             d:DesignWidth="250"
             d:DataContext="{d:DesignInstance designTime:SizesTable,
                                              IsDesignTimeCreatable=True}">
    <DataGrid ItemsSource="{Binding Sizes}"
              AutoGenerateColumns="False"
              SelectedItem="{Binding SelectedSize}"
              MaxWidth="250"
              IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Name}" 
                                Header="Name" />
            <DataGridTextColumn Binding="{Binding Radius}" 
                                Header="R(cm)" />
            <DataGridTextColumn Binding="{Binding PriceMultiplier}" 
                                Header="Price Multiplier" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>