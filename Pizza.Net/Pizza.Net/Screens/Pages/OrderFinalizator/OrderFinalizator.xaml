<UserControl x:Class="Pizza.Net.Screens.Pages.OrderFinalizator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.Net.Screens.Pages"
             xmlns:tables="clr-namespace:Pizza.Net.Screens.Tables"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Top">
        <tables:OrdersTable DataContext="{Binding UnfinishedOrders}" />
        <StackPanel  HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Orientation="Horizontal">
            <Button Content="Order finished"
                    Command="{Binding FinalizeCommand}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"/>
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"/>
        </StackPanel>
    </StackPanel>
</UserControl>