<UserControl x:Class="Pizza.Net.Screens.Pages.OrderSubmit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.Net.Screens.Pages"
             xmlns:tables="clr-namespace:Pizza.Net.Screens.Tables"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="900">
    <StackPanel>
        <TextBlock Text="Client" 
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <tables:ClientsTable DataContext="{Binding Client}"/>
        <TextBlock Text="Pizzas" 
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <tables:PizzasTable DataContext="{Binding Pizzas}"/>
    </StackPanel>
</UserControl>