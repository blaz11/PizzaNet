<UserControl x:Class="Pizza.Net.Screens.Tables.IngredientsTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.Net.Screens.Tables"
             xmlns:designTime="clr-namespace:Pizza.Net.Screens.DesignTimeData"
             mc:Ignorable="d" 
             d:DesignHeight="400"
             d:DesignWidth="100"
             d:DataContext="{d:DesignInstance designTime:IngredientsTable,
                                              IsDesignTimeCreatable=True}">
    <DataGrid ItemsSource="{Binding Ingredients}"
              AutoGenerateColumns="False"
              SelectedItem="{Binding SelectedIngredient}"
              IsReadOnly="True"
              MaxWidth="100">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Name}" 
                                    Header="Name" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>