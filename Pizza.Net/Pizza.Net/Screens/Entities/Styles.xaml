<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:corlib="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:Pizza.Net.Screens.Entities">
    <corlib:Double x:Key="EntityFieldHeight">
        30
    </corlib:Double>
    <Style x:Key="EntityFieldTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style x:Key="AlternatingListViewItemStyle" TargetType="{x:Type ListViewItem}">
        <Style.Triggers>
            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                <Setter Property="Background" Value="DarkViolet"></Setter>
            </Trigger>
            <Trigger Property="ItemsControl.AlternationIndex" Value="2">
                <Setter Property="Background" Value="Transparent"></Setter>
            </Trigger>
        </Style.Triggers>
        <Setter Property="Height" Value="{StaticResource EntityFieldHeight}" />
    </Style>
</ResourceDictionary>