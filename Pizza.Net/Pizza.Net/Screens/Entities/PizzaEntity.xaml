<UserControl x:Class="Pizza.Net.Screens.Entities.PizzaEntity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.Net.Screens.Entities"
             xmlns:designTime="clr-namespace:Pizza.Net.Screens.DesignTimeData"
             mc:Ignorable="d" 
             d:DesignHeight="25"
             d:DesignWidth="450"
             d:DataContext="{d:DesignInstance designTime:PizzaEntity,
                                              IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <local:IngredientsCollectionToListOfEntitiesConverter 
            x:Key="IngredientsCollectionToListOfEntitiesConverter" />
    </UserControl.Resources>
    <Grid VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <local:BasicEntityField Grid.Column="0" DataContext="{Binding Name}" />
        <local:ListOfEntities Grid.Column="1"
                            DataContext="{Binding PizzaIngredients, 
                                Converter={StaticResource IngredientsCollectionToListOfEntitiesConverter}}"/>
        <local:BasicEntityField Grid.Column="3" DataContext="{Binding Price}" />
    </Grid>
</UserControl>
