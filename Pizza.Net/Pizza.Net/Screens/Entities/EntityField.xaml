<UserControl x:Class="Pizza.Net.Screens.Entities.EntityField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.Net.Screens.Entities"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid MouseEnter="MouseEnteredMarqueeHitbox"
          MouseLeave="MouseLeftMarqueeHitbox">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <!-- Rectangle for hitbox detection-->
        <Rectangle Fill="Transparent"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"/>
        <Canvas x:Name="MarqueeCanvas"
                Grid.Column="0"
                ClipToBounds="True">
            <TextBlock x:Name="MarqueeBlock"
                       Text="{Binding}"
                       FontSize="16"
                       Margin="1,0,1,0"/>
        </Canvas>
        <Rectangle Grid.Column="1"
                   VerticalAlignment="Stretch" 
                   HorizontalAlignment="Right"
                   Width="1" Margin="1,0,1,0" 
                   Stroke="Black"/>
    </Grid>
</UserControl>
